{
  "name": "svelte-blog",
  "version": "1.0.0",
  "private": "true",
  "main": "index.js",
  "license": "MIT",
  "workspaces": [
    "./packages/*",
    "./sites/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "build": "lerna run build",
    "test": "lerna run test --stream --no-prefix --parallel --no-bail --reject-cycles",
    "git:clean": "git clean -xdfq",
    "checkupdate": "lerna exec ncu --stream",
    "upgrade": "lerna exec ncu -u && yarn install"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^17.4.4",
    "commitlint": "^17.4.4",
    "husky": "^8.0.3",
    "lerna": "^6.0.3"
  },
  "lint-staged": {
    "**/*.ts{x}": "eslint ."
  }
}
